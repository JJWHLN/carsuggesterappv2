{
  "testRunner": {
    "args": {
      "$0": "jest",
      "config": ".detoxrc.js"
    },
    "jest": {
      "setupFilesAfterEnv": ["<rootDir>/__tests__/e2e/setup.ts"]
    }
  },
  "apps": {
    "ios": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/CarSuggesterApp.app",
      "build": "xcodebuild -workspace ios/CarSuggesterApp.xcworkspace -scheme CarSuggesterApp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
    },
    "android": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
      "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug"
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 14"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_3a_API_30_x86"
      }
    }
  },
  "configurations": {
    "ios.sim.debug": {
      "device": "simulator",
      "app": "ios"
    },
    "android.emu.debug": {
      "device": "emulator",
      "app": "android"
    }
  }
}
